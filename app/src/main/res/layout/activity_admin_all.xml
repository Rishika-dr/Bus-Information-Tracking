<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAllActivity"
    android:background="@drawable/bus111">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8F000000"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="45dp" />

    <Button
        android:id="@+id/viewFaculty"
        android:layout_width="340dp"
        android:layout_height="61dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"
        android:backgroundTint="#AD163CC3"

        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="View Faculty Detail"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#B6FAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addFaculty" />

    <Button
        android:id="@+id/SendMessage"
        android:layout_width="340dp"
        android:layout_height="61dp"
        android:layout_marginStart="147dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="147dp"
        android:backgroundTint="#B0ED7001"

        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Send Message"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E1B8DDD5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewFaculty"
        app:layout_constraintVertical_bias="0.063" />

    <Button
        android:id="@+id/AddDriver"
        android:layout_width="340dp"
        android:layout_height="61dp"

        android:layout_marginTop="44dp"
        android:backgroundTint="#B0ED7001"
        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Add Bus Detail"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E1B8DDD5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/ViewDriver"
        android:layout_width="340dp"
        android:layout_height="61dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#AD163CC3"

        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="View Bus Detail"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#B6FAFA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddDriver" />

    <Button
        android:id="@+id/addFaculty"
        android:layout_width="340dp"
        android:layout_height="61dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="151dp"

        android:backgroundTint="#B0ED7001"
        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Add Faculty Detail"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E1B8DDD5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ViewDriver" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Admin Activities"
        android:fontFamily="@font/aldrich"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>